{
  "name": "clean-node-ts-api",
  "version": "1.0.0",
  "description": "This is a template for node.js with typescript built using clean architecture",
  "main": "index.js",
  "private": true,
  "license": "ISC",
  "engines": {
    "node": ">=12.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BrockMekonnen/clean-node-ts-api.git"
  },
  "author": "Biruk Mekonnen",
  "bugs": {
    "url": "https://github.com/BrockMekonnen/clean-node-ts-api/issues"
  },
  "homepage": "https://github.com/BrockMekonnen/clean-node-ts-api#readme",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc",
    "dev": "tsnd --transpile-only --files src/index.ts | pino-pretty -c -l",
    "debug": "tsnd --transpile-only --inspect --files src/index.ts | pino-pretty -c -l",
    "cli": "tsnd --transpile-only --files src/index.ts --cli",
    "remote": "ts-node bin/replClient.ts",
    "test": "jest"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^29.0.0",
    "@types/lodash.template": "^4.5.1",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^17.0.21",
    "@types/pino": "^7.0.5",
    "@types/supertest": "^2.0.11",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-jest": "^26.1.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^29.0.0",
    "pino-pretty": "^7.5.1",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.2.2",
    "ts-jest": "^29.0.1",
    "ts-node": "^10.5.0",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths-jest": "^0.0.1",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^8.5.9",
    "awilix": "^6.1.0",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dayjs": "^1.11.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "helmet": "^6.0.0",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "lodash.template": "^4.5.0",
    "mongodb": "^4.5.0",
    "nodemailer": "^6.7.8",
    "pino": "^7.8.0",
    "pino-http": "^6.6.0",
    "swagger-jsdoc": "^6.1.0",
    "swagger-ui-express": "^4.3.0",
    "tsconfig-paths": "^3.12.0",
    "types-joi": "^2.1.0",
    "uuid": "^8.3.2",
    "uuid-mongodb": "^2.5.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "coverage",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/src/**"
    ],
    "testRegex": "(/__tests__/.*(test|spec))\\.[jt]sx?$",
    "moduleNameMapper": {
      "@/(.*)": "<rootDir>/src/$1"
    },
    "setupFiles": [
      "./src/__tests__/setup.ts"
    ]
  }
}
